            <div class="col"><img height="200" width="150" src="data:image/jpg;base64, @ImagesModel.ImageStrHome"></div>
        </div>
        <div class="col">
            <div class="col"><img height="200" width="150" src="data:image/jpg;base64, @ImagesModel.ImageStrEast"></div>
        </div>
        <div class="col">
