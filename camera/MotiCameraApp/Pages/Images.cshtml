@page
@model ImagesModel
@{
    ViewData["Title"] = "MOTI Camera Images";
    Layout = null;
}
@*<h1>@ViewData["Title"]</h1>*@

@{ int count = 0;}



<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MotiCameraApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <meta http-equiv="refresh" content="30000">

    <style>
        * {
            box-sizing: border-box;
        }

        .column {
            float: left;
            width: 20%;
            padding: 5px;
        }

        /* Clearfix (clear floats) */
        .row::after {
            content: "";
            clear: both;
            display: table;
        }
    </style>

</head>

<div style="margin: 20px">
    <div class="row">
        <div class="column">
            Home
        </div>
        <div class="column">
            East
        </div>
        <div class="column">
            West
        </div>
        <div class="column">
            North
        </div>
        <div class="column">
            South
        </div>
    </div>

    <div class="row">
        <div class="column">
            <img src="data:image/jpg;base64, @ImagesModel.ImageStrHome" alt="Home" style="width:100%">
        </div>
        <div class="column">
            <img src="data:image/jpg;base64, @ImagesModel.ImageStrEast" alt="East" style="width:100%">
        </div>
        <div class="column">
            <img src="data:image/jpg;base64, @ImagesModel.ImageStrWest" alt="West" style="width:100%">
        </div>
        <div class="column">
            <img src="data:image/jpg;base64, @ImagesModel.ImageStrNorth" alt="North" style="width:100%">
        </div>
        <div class="column">
            <img src="data:image/jpg;base64, @ImagesModel.ImageStrSouth" alt="South" style="width:100%">
        </div>
    </div>

</div>


<div class="container" hidden>

    <div class="row align-items-start">
        <div class="col">
            Home
        </div>
        <div class="col">
